{
    "prefix": "Exp_View",
    "viewtypes": {
        "50": "List",
        "500": "Landscape Flow",
        "501": "Poster Flow",
        "502": "Poster Grid",
        "503": "Landscape Grid",
        "520": "Square Grid",
        "530": "Category",
        "540": "Episode Flow Horizontal"
    },
    "rules": {
        "addons": {
            "rule": "Container.Content(addons)",
            "viewtypes": ["50", "520"],
            "library": "50",
            "plugins": "50"
        },
        "albums": {
            "rule": "Container.Content(albums)",
            "viewtypes": ["50", "520"],
            "library": "520"
        },
        "images": {
            "rule": "Container.Content(images)",
            "viewtypes": ["50", "503"],
            "library": "503"
        },
        "actors": {
            "rule": "Container.Content(actors)",
            "viewtypes": ["50", "502", "530"],
            "library": "530"
        },
        "seasons": {
            "rule": "Container.Content(seasons)",
            "viewtypes": ["500", "501", "540"], 
            "library": "501"
        },
        "tags": {
            "rule": "Container.Content(tags)",
            "viewtypes": ["50", "502", "530"],
            "library": "530"
        },
        "countries": {
            "rule": "Container.Content(countries)",
            "library": "530"
        },
        "genres": {
            "rule": "Container.Content(genres) + !Window.IsVisible(MyMusicNav.xml)",
            "library": "530"
        },        
        "genres-music": {
            "rule": "Container.Content(genres) + Window.IsVisible(MyMusicNav.xml)",
            "viewtypes": ["50", "520"],
            "library": "520"
        },
        "studios": {
            "rule": "Container.Content(studios)",
            "library": "530"
        },
        "years": {
            "rule": "Container.Content(years)",
            "library": "530"
        },
        "years-music": {
            "rule": "Container.Content(years) + Window.IsVisible(MyMusicNav.xml)",
            "viewtypes": ["50", "520"],
            "library": "520"
        },
        "directors": {
            "rule": "Container.Content(directors)",
            "library": "50"
        },
        "artists": {
            "rule": "Container.Content(artists)",
            "viewtypes": ["50", "520"],
            "library": "520"
        },
        "videos": {
            "rule": "Container.Content(videos)",
            "viewtypes": ["50", "503"],
            "library": "50",
            "plugins": "50"
        },
        "sets": {
            "rule": "Container.Content(sets)",
            "viewtypes": ["500", "501"],
            "library": "500"
        },
        "movies": {
            "rule": "Container.Content(movies)",
            "viewtypes": ["500", "501"],
            "library": "500"
        },
        "tvshows": {
            "rule": "Container.Content(tvshows)",
            "viewtypes": ["500", "501"],
            "library": "500"
        },
        "episodes": {
            "rule": "Container.Content(episodes)",
            "viewtypes": ["50", "500"],
            "library": "50",
            "plugins": "50"
        },
        "songs": {
            "rule": "Container.Content(songs)",
            "library": "50",
            "plugins": "50"
        },
        "files": {
            "rule": "Container.Content(files)",
            "viewtypes": ["50", "503"],
            "library": "50",
            "plugins": "50"
        },
        "playlists": {
            "rule": "Container.Content(playlists)",
            "library": "50"
        },
        "none": {
            "rule" : "Container.Content()",
            "library": "50"
        }
    }
}