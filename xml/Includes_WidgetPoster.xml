<?xml version="1.0" encoding="UTF-8"?>

<includes>

    <include name="WidgetPoster">
        <param name="WidgetLabel2" default="" />
        <param name="GroupHeight" default="1200" />
        <param name="CustomOnClick" default="false" />
        <param name="AlwaysShowLabel" default="false" />
        <definition>
            <control type="group">
                <visible>Integer.IsGreater(Container($PARAM[ListID]).NumItems,0) | Container($PARAM[ListID]).IsUpdating</visible>
                <left>0</left>
                <right>0</right>
                <top>0</top>
                <height>$PARAM[GroupHeight]</height>
                
                <!-- Header group -->
                <control type="group">
                    <animation effect="Fade" start="100" end="75" time="100" condition="!Control.HasFocus($PARAM[ListID])">Conditional</animation>
                    <animation effect="Fade" start="75" end="100" time="100" condition="Control.HasFocus($PARAM[ListID])">Conditional</animation>
                    <animation effect="zoom" start="100" end="60" center="224,300" time="100" condition="!Control.HasFocus($PARAM[ListID])">Conditional</animation>
                    <!-- Widget header label -->
                    <control type="label">
                        <left>224</left>
                        <top>50</top>
                        <width>3000</width>
                        <height>0</height>
                        <aligny>top</aligny>
                        <font>WidgetLabel</font>
                        <textcolor>TextBright</textcolor>
                        <label>$PARAM[WidgetLabel]</label>
                    </control>
                </control>
                <!-- Main widget list -->
                <control type="fixedlist" id="$PARAM[ListID]">
                    <top>100</top>
                    <left>0</left>
                    <right>0</right>
                    <height>1200</height>
                    <onup>$PARAM[OnUp]</onup>
                    <ondown>$PARAM[OnDown]</ondown>
                    <onback>SetFocus($PARAM[ParentID])</onback>
                    <onback>$PARAM[OnBack]</onback>
                    <onleft>$PARAM[OnLeft]</onleft>
                    <onright>noop</onright>
                    <onclick condition="$PARAM[CustomOnClick]">$PARAM[OnClick]</onclick>
                    <pagecontrol>60</pagecontrol>
                    <preloaditems>2</preloaditems>
                    <orientation>horizontal</orientation>
                    <focusposition>0</focusposition>
                    <movement>3</movement>

                    <itemlayout width="496" height="740">
                        <control type="group">
                            <left>182</left>
                            <include content="PosterLayout">
                                <param name="ListID" value="$PARAM[ListID]" />
                                <param name="LabelColor" value="TextDim" />
                                <param name="Focused" value="false" />
                                <param name="ShowLabel1" value="$PARAM[AlwaysShowLabel]" />
                                <param name="ShowLabel2" value="$PARAM[AlwaysShowLabel]" />
                            </include>
                        </control>
                    </itemlayout>

                    <focusedlayout width="496" height="740">
                        <control type="group">
                            <visible>Control.HasFocus($PARAM[ListID])</visible>
                            <left>182</left>
                            <include content="PosterLayout">
                                <param name="ListID" value="$PARAM[ListID]" />
                                <param name="LabelColor" value="TextBright" />
                                <param name="Focused" value="true" />
                                <param name="ShowLabel1" value="true" />
                                <param name="ShowLabel2" value="true" />
                            </include>
                        </control>
                        <control type="group">
                            <visible>!Control.HasFocus($PARAM[ListID])</visible>
                            <left>182</left>
                            <include content="PosterLayout">
                                <param name="ListID" value="$PARAM[ListID]" />
                                <param name="LabelColor" value="TextDim" />
                                <param name="Focused" value="true" />
                                <param name="ShowLabel1" value="$PARAM[AlwaysShowLabel]" />
                                <param name="ShowLabel2" value="$PARAM[AlwaysShowLabel]" />
                            </include>
                        </control>
                    </focusedlayout>

                    <!-- <content target="$PARAM[ContentType]" sortby="$PARAM[SortBy]" sortorder="$PARAM[SortOrder]">$PARAM[Content]</content> -->
                    <!-- <content target="$PARAM[ContentType]" sortby="$PARAM[SortBy]" sortorder="$PARAM[SortOrder]">$PARAM[Content2]</content> -->
                </control>
            </control>
        </definition>
    </include>

</includes>